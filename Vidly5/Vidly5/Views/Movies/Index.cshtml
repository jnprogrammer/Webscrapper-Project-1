@model IEnumerable<Vidly5.Models.Movie>

@{
    ViewBag.Title = "Movies Avalible";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title </h2>

@if (!Model.Any())
{
    <p>We don't have any Movies </p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Units In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.MovieInfo.Genre</td>
                    <td>@movie.MovieInfo.NumInStock</td>
                </tr>
            }
        </tbody>
    </table>
}

